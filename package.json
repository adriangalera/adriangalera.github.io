{
	"name": "agalera.eu",
	"type": "module",
	"version": "1.1.0",
	"description": "My personal blog",
	"author": "Adrian galera",
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/adriangalera/adriangalera.github.io"
	},
	"keywords": [
		"astro",
		"astrojs",
		"astro-template",
		"astro-blog",
		"astro-b"
	],
	"scripts": {
		"dev": "npx tinacms dev -c \"astro dev\"",
		"dev:host": "npx tinacms dev -c \"astro dev --host\"",
		"start": "astro dev",
		"build": "vitest --no-watch && astro build",
		"sync": "astro sync",
		"preview": "astro preview",
		"preview:host": "astro preview --host",
		"postbuild": "pagefind --site dist",
		"format:check": "prettier --plugin-search-dir=. --check .",
		"format": "prettier --plugin-search-dir=. --write .",
		"lint": "eslint .",
		"pre-commit": "lint-staged",
		"prepare": "husky install",
		"deploy": "npm run build && gh-pages -d dist --branch gh-pages --dotfiles",
		"compare-sitemaps": "node scripts/compare-sitemaps.cjs",
		"test": "vitest --no-watch"
	},
	"dependencies": {
		"@astrojs/rss": "^4.0.13",
		"astro": "^5.15.9"
	},
	"devDependencies": {
		"@astrojs/mdx": "^4.3.10",
		"@astrojs/sitemap": "^3.6.0",
		"@astrojs/tailwind": "^6.0.2",
		"@pagefind/default-ui": "^1.4.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tinacms/cli": "^1.12.0",
		"@typescript-eslint/parser": "^8.46.2",
		"clsx": "^2.1.1",
		"eslint": "^9.39.1",
		"eslint-plugin-astro": "^1.5.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"gh-pages": "^6.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"mdast-util-to-string": "^4.0.0",
		"motion": "^12.23.22",
		"pagefind": "^1.4.0",
		"prettier": "^3.6.2",
		"prettier-config-standard": "^7.0.0",
		"prettier-plugin-astro": "^0.14.1",
		"reading-time": "^1.5.0",
		"slugify": "^1.6.6",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^3.4.18",
		"tinacms": "^2.9.5",
		"typescript": "^5.9.3",
		"vitest": "^4.0.3",
		"xml2json": "^0.12.0"
	},
	"lint-staged": {
		"*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
			"prettier --write --plugin-search-dir=."
		]
	},
	"engines": {
		"node": "20.x"
	}
}
